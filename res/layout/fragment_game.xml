<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background" >

    <TextView
        android:id="@+id/text_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/score_text_size"
        android:layout_alignParentLeft="true"
        android:text="@string/score" />
    
    <TextView
        android:id="@+id/text_best"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/score_text_size"
        android:text="@string/best" />
    
    <TextSwitcher android:id="@+id/score"
        android:layout_below="@id/text_score"        
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:textSize="@dimen/score_digit_size"/> 
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:textSize="@dimen/score_digit_size"/>
    </TextSwitcher>
    
    <TextSwitcher 
        android:id="@+id/bonus"
        android:layout_marginLeft="@dimen/bonus_margin"
        android:layout_below="@id/text_score"
        android:layout_toRightOf="@id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
   	    <TextView 
   	        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bonus"
            android:textStyle="italic|bold"
            android:textSize="@dimen/bonus_text_size"
            />
        <TextView 
   	        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bonus"
            android:textStyle="italic|bold"
            android:textSize="@dimen/bonus_text_size"
            />
    </TextSwitcher>
    
    <TextView 
        android:id="@+id/best"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_below="@id/text_best"
        android:textSize="@dimen/score_digit_size"/>
    
    <TextView 
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:textColor="@color/white"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/score"        
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textSize="@dimen/word_display"/>
    
    <TextView
        android:layout_below="@id/word"
        android:textSize="@dimen/word_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:paddingTop="@dimen/activity_vertical_margin"/>
    
    <TextView android:id="@+id/input"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/word"
        android:textSize="@dimen/word_input"
        android:gravity="center"
        android:textColor="@color/white"
        android:paddingTop="@dimen/activity_vertical_margin"/>
    
    <com.z299studio.wordchain.InputView 
        android:longClickable="true"
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/input" />
    
</RelativeLayout>