<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
		<layer-list >
    		<item><shape android:shape="oval">
	            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp" />
	            <solid android:color="@color/shadow_0_light" /></shape></item>
    		<item><shape android:shape="oval">
	            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp" />
	            <solid android:color="@color/shadow_1_light" /></shape></item>
     		<item><shape android:shape="oval">
	            <padding android:left="1dp" android:right="1dp" android:bottom="1dp" />
	            <solid android:color="@color/shadow_2_light" /></shape></item>
     		<item><shape android:shape="oval">
	            <padding android:bottom="1dp" />
	            <solid android:color="@color/shadow_3_light" /></shape></item>
	        <item><shape android:shape="oval">
            	<solid android:color="@color/primary_darker" />
        		</shape></item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list >
    		<item><shape android:shape="oval">
	            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp" />
	            <solid android:color="@color/shadow_0_light" /></shape></item>
    		<item><shape android:shape="oval">
	            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp" />
	            <solid android:color="@color/shadow_1_light" /></shape></item>
     		<item><shape android:shape="oval">
	            <padding android:left="1dp" android:right="1dp" android:bottom="1dp" />
	            <solid android:color="@color/shadow_2_light" /></shape></item>
     		<item><shape android:shape="oval">
	            <padding android:bottom="1dp" />
	            <solid android:color="@color/shadow_3_light" /></shape></item>
	        <item><shape android:shape="oval">
            	<solid android:color="@color/primary_darker" />
        		</shape></item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
		<shape android:shape="oval">
		    <solid android:color="@color/btn_disabled_light"/>
		</shape>        
    </item>
    <item >
		<layer-list >
    		<item><shape android:shape="oval">
	            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp" />
	            <solid android:color="@color/shadow_0_light" /></shape></item>
    		<item><shape android:shape="oval">
	            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp" />
	            <solid android:color="@color/shadow_1_light" /></shape></item>
     		<item><shape android:shape="oval">
	            <padding android:left="1dp" android:right="1dp" android:bottom="1dp" />
	            <solid android:color="@color/shadow_2_light" /></shape></item>
     		<item><shape android:shape="oval">
	            <padding android:bottom="1dp" />
	            <solid android:color="@color/shadow_3_light" /></shape></item>
	        <item><shape android:shape="oval">
            	<solid android:color="@color/primary" />
        		</shape></item>
        </layer-list>
    </item>
</selector>
