<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:editTextStyle">@style/editTextStyle</item>
    </style>

    <style name="TA">
        <item name="android:textColor">@color/text_black_std</item>
    </style>
    
    <style name="TA.Subhead">
        <item name="android:textSize">16sp</item>        
    </style>
    
    <style name="TA.Display1">
        <item name="android:textSize">34sp</item>
    </style>
    
    <style name="TA.Body1">
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="TA.Headline">
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="editTextStyle" parent="@style/android:Widget.EditText">
        <item name="android:background">@drawable/input_line</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    
    <style name="menuButtonStyle" parent="@style/android:Widget.Button">
        <item name="android:background">@drawable/abmenu</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    
    <style name="abMenuItem">
        <item name="android:background">@drawable/abmenu</item>
    </style>
    
    <style name="popupAnimation">
        <item name="android:windowEnterAnimation">@anim/expand_from_tr</item>
        <item name="android:windowExitAnimation">@anim/shrink_to_tr</item>
    </style>
</resources>
